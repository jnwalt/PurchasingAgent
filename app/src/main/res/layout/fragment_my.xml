
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
    tools:context="com.leetai.purchasingagent.fragment.MyFragment">
        android:orientation="vertical"

        android:layout_gravity="top">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation =   "vertical"
                >
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="#FF909090"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"

                    android:gravity =   "left"
                    android:orientation =   "horizontal"
                    android:clickable="true"
                    android:weightSum="1"
                    android:background="#8f1b81">
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:gravity =   "center_vertical"
                        android:orientation =   "horizontal"
                        >
                        <ImageView
                            android:id =   "@+id/iv_head"
                            android:layout_width =   "60dp"
                            android:layout_height =   "60dp"
                            android:gravity="right"
                            android:src="@drawable/launcher_bg"
                            />
                        <TextView
                            android:id =   "@+id/tv_username"
                            android:layout_width =   "50dp"
                            android:layout_height =   "wrap_content"
                            android:gravity =   "left"
                            android:textColor =   "#011333"
                            android:textSize =   "14sp"
                            android:editable="false"
                            android:text="用户名"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:gravity =   "center_horizontal|center_vertical"
                        android:orientation =   "horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id =   "@+id/tv_accout"
                            android:layout_width =   "wrap_content"
                            android:layout_height =   "30dp"
                            android:gravity =   "bottom"
                            android:textColor =   "#011333"
                            android:textSize =   "13sp"
                            android:editable="false"
                            android:text="账户管理 >"
                            android:focusable="true"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:background="#546a4690"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity =   "center_vertical"
                    android:orientation =   "horizontal"
                    android:clickable="true">
                    <TextView
                        android:id =   "@+id/tv_key1"
                        android:layout_width =   "60dip"
                        android:layout_height =   "30dip"
                        android:gravity =   "left|center_vertical"
                        android:textColor = "#011333"
                        android:text="我的订单"
                        android:textSize =   "15sp"  />
                    <TextView
                        android:id =   "@+id/tv_ord"
                        android:layout_width =   "fill_parent"
                        android:layout_height =   "30dip"
                        android:gravity =   "right|center_vertical"
                        android:textColor = "#a318182c"
                        android:text="查看全部订单 >"
                        android:textSize =   "14sp"
                        android:focusable="true"/>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#FF909090"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity =   "center_vertical"
                    android:orientation =   "horizontal"
                    android:clickable="true"
                    android:weightSum="1"
                    android:visibility="visible">

                    <com.leetai.purchasingagent.tools.MyImgBtn
                        android:id="@+id/MyImgBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.33"
                        android:divider="#84130f" />
                    <com.leetai.purchasingagent.tools.MyImgBtn
                        android:id="@+id/MyImgBtn2"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.33"
                        android:showDividers="beginning" />

                    <com.leetai.purchasingagent.tools.MyImgBtn
                        android:id="@+id/MyImgBtn3"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_gravity="top|center_horizontal"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_weight="0.33"
                        />


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:background="#546a4690"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:gravity =   "center_vertical"
                    android:orientation =   "horizontal"
                    android:clickable="true">
                    <TextView
                        android:layout_width =   "60dip"
                        android:layout_height =   "30dip"
                        android:gravity =   "left|center_vertical"
                        android:textColor = "#011333"
                        android:text="我的账户"
                        android:textSize =   "15sp"  />
                    <TextView
                        android:id =   "@+id/tv_o00"
                        android:layout_width =   "fill_parent"
                        android:layout_height =   "30dip"
                        android:gravity =   "right|center_vertical"
                        android:textColor = "#a318182c"

                        android:textSize =   "14sp"
                        android:focusable="true"/>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#546a4690"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity =   "center_vertical"
                    android:orientation =   "horizontal"
                    android:clickable="true"
                    android:weightSum="1"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity =   "center_vertical"
                        android:orientation =   "vertical"
                        android:clickable="true"
                        android:visibility="visible"
                        android:layout_weight="0.5">
                        <TextView
                            android:id="@+id/te"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="账户余额"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity =   "center_vertical"
                        android:orientation =   "vertical"
                        android:clickable="true"
                        android:visibility="visible"
                        android:layout_weight="0.5">
                        <TextView
                            android:id="@+id/tv_tic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="优惠券"/>

                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20dip"
                    android:background="#546a4690"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity =   "center_vertical"
                    android:orientation =   "vertical"
                    android:clickable="true"
                    android:visibility="visible"
                    android:layout_weight="0.5">
                    <TextView
                        android:id="@+id/tv_setting"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="left|center_vertical"
                        android:text="设置"
                        android:textSize="16sp"
                        android:textColor = "#011333"/>


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#FF909090"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

