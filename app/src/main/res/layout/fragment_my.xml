<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:layout_gravity="top"
    tools:context="com.leetai.purchasingagent.fragment.MyFragment">
  >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FF909090" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/base_color"
                android:clickable="true"
                android:gravity="left"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="right"
                        android:src="@drawable/launcher_bg"
                        android:clickable="true"/>

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:gravity="left"
                        android:text="用户名"
                        android:textColor="#011333"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_accout"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:editable="false"
                        android:focusable="true"
                        android:gravity="bottom"
                        android:text="账户管理 >"
                        android:textColor="#011333"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:background="@color/Gap_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_all_order"
                    android:layout_width="60dip"
                    android:layout_height="30dip"
                    android:gravity="left|center_vertical"
                    android:text="我的订单"
                    android:textColor="#011333"
                    android:textSize="15sp"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/tv_ord"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:focusable="true"
                    android:gravity="right|center_vertical"
                    android:text="查看全部订单 >"
                    android:textColor="#a318182c"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/Gap_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <com.leetai.purchasingagent.tools.MyImgBtn
                    android:id="@+id/MyImgBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:divider="#84130f"
                    android:focusable="true" />

                <com.leetai.purchasingagent.tools.MyImgBtn
                    android:id="@+id/MyImgBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:focusable="true"
                    android:showDividers="beginning" />

                <com.leetai.purchasingagent.tools.MyImgBtn
                    android:id="@+id/MyImgBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_weight="0.33"
                    android:clickable="true"
                    android:focusable="true" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:background="@color/Gap_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dip"
                    android:layout_height="30dip"
                    android:gravity="left|center_vertical"
                    android:text="我的账户"
                    android:textColor="#011333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_o00"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:focusable="true"
                    android:gravity="right|center_vertical"

                    android:textColor="#a318182c"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/Gap_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/te"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="账户余额" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_tic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="优惠券" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:background="@color/Gap_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="left|center_vertical"
                    android:text="设置"
                    android:textColor="#011333"
                    android:textSize="16sp" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/Gap_color" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

