<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.leetai.purchasingagent.activity.OrderActivity">

    <include
        android:id="@+id/in_title"
        layout="@layout/view_order_title" />

    <LinearLayout
        android:id="@+id/ll_p"
        style="@style/OrderDetailLLStyle"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/OrderDetailNameTextStyle"
            android:layout_margin="10dp"
            android:text="我的信息" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/Gap_color" />

        <LinearLayout style="@style/OrderDetailLLStyle">

            <TextView
                style="@style/OrderDetailNameTextStyle"
                android:text="标        题" />

            <TextView
                android:id="@+id/tv_p_title"
                style="@style/OrderDetailTextStyle"
                android:text="54654646是的发生的发生的发生" />
        </LinearLayout>

        <LinearLayout style="@style/OrderDetailLLStyle">

            <TextView
                style="@style/OrderDetailNameTextStyle"
                android:text="详        情" />

            <TextView
                android:id="@+id/tv_p_description"
                style="@style/OrderDetailTextStyle"
                android:text="sdfasdfewfqsadfasjkf  asdf hwquehfaskjdfh 撒地方纪委" />
        </LinearLayout>

        <LinearLayout style="@style/OrderDetailLLStyle">

            <TextView
                style="@style/OrderDetailNameTextStyle"
                android:text="地        址" />

            <TextView
                android:id="@+id/tv_p_address"
                style="@style/OrderDetailTextStyle"
                android:text="中国山东济南历城区工业北路21号" />
        </LinearLayout>

        <LinearLayout style="@style/OrderDetailLLStyle">

            <TextView
                style="@style/OrderDetailNameTextStyle"
                android:text="心里价格" />

            <TextView
                android:id="@+id/tv_p_price"
                style="@style/OrderDetailTextStyle"
                android:text="5698452" />
        </LinearLayout>

        <LinearLayout style="@style/OrderDetailLLStyle">

            <TextView
                style="@style/OrderDetailNameTextStyle"
                android:text="发镖时间" />

            <TextView
                android:id="@+id/tv_p_addtime"
                style="@style/OrderDetailTextStyle"
                android:text="2016-03-08" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:background="@color/Gap_color" />

    <LinearLayout
        android:id="@+id/ll_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/OrderDetailNameTextStyle"
            android:layout_margin="10dp"
            android:text="卖家信息" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="@color/Gap_color" />

        <LinearLayout style="@style/OrderDetailLLStyle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/defaulthad" />
                <TextView
                    android:id="@+id/tv_s_user"
                    style="@style/OrderDetailTextStyle"
                    android:text="liitai" />
            </LinearLayout>

            <LinearLayout
                style="@style/OrderDetailLLStyle"
                android:orientation="vertical">
            <LinearLayout style="@style/OrderDetailLLStyle">
                <TextView
                    style="@style/OrderDetailNameTextStyle"
                    android:text="投标价格" />
                <TextView
                    android:id="@+id/tv_s_price"
                    style="@style/OrderDetailTextStyle"
                    android:text="565282" />
            </LinearLayout>

            <LinearLayout style="@style/OrderDetailLLStyle">
                <TextView
                    style="@style/OrderDetailNameTextStyle"
                    android:text="所  在  地" />
                <TextView
                    android:id="@+id/tv_s_address"
                    style="@style/OrderDetailTextStyle"
                    android:text="美国" />
            </LinearLayout>
                <LinearLayout style="@style/OrderDetailLLStyle">
                    <TextView
                        style="@style/OrderDetailNameTextStyle"
                        android:text="备        注" />
                    <TextView
                        android:id="@+id/tv_s_memo"
                        style="@style/OrderDetailTextStyle"
                        android:text="谁看见的划分来看水电费函数数据的恢复按时交付" />
                </LinearLayout>
            <LinearLayout style="@style/OrderDetailLLStyle">
                <TextView
                    style="@style/OrderDetailNameTextStyle"
                    android:text="接镖时间" />
                <TextView
                    android:id="@+id/tv_s_addtime"
                    style="@style/OrderDetailTextStyle"
                    android:text="2016-03-08" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
