<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical"

    tools:context="com.leetai.purchasingagent.activity.UserinfoActivity">

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_key0"
                android:layout_width="60dip"
                android:layout_height="30dip"
                android:gravity="left"
                android:text="头像"
                android:textColor="#011333"
                android:textSize="14sp" />

            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:clickable="true"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:src="@drawable/launcher_bg" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_key1"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:gravity="left"
            android:text="用户名"
            android:textColor="#011333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:editable="false"
            android:gravity="right"
            android:textColor="#a318182c"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_key2"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:gravity="left"
            android:text="密码"
            android:textColor="#011333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="right"
            android:password="true"
            android:textColor="#011333"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_key3"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:gravity="left"
            android:text="手机"
            android:textColor="#011333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_telphone"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="right"
            android:textColor="#011333"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_key4"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:gravity="left"
            android:text="e-mail"
            android:textColor="#011333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="right"
            android:textColor="#011333"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />

</LinearLayout>