
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="16dp"
    tools:context="com.leetai.purchasingagent.activity.UserinfoActivity"
    android:orientation="vertical"

    android:layout_gravity="top">
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity =   "center_vertical"
        android:orientation =   "horizontal"
        android:clickable="true">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:gravity =   "center_vertical"
            android:orientation =   "horizontal"
            >
            <TextView
                android:id =   "@+id/tv_key0"
                android:layout_width =   "60dip"
                android:layout_height =   "30dip"
                android:gravity =   "left"
                android:textColor = "#011333"
                android:text="头像"
                android:textSize =   "14sp"  />

            />    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity =   "right"
            android:orientation =   "horizontal"
            android:clickable="true"
            >
            <ImageView
                android:id =   "@+id/iv_head"
                android:layout_width =   "80dp"
                android:layout_height =   "wrap_content"
                android:gravity="right"
                android:src="@drawable/launcher_bg"
                />  </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity =   "center_vertical"
        android:orientation =   "horizontal"
        android:clickable="true">
        <TextView
            android:id =   "@+id/tv_key1"
            android:layout_width =   "60dip"
            android:layout_height =   "30dip"
            android:gravity =   "left"
            android:textColor = "#011333"
            android:text="用户名"
            android:textSize =   "14sp"  />
        <TextView
            android:id =   "@+id/tv_username"
            android:layout_width =   "fill_parent"
            android:layout_height =   "30dip"
            android:gravity =   "right"
            android:textColor =   "#a318182c"
            android:textSize =   "14sp"
            android:editable="false" />

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity =   "center_vertical"
        android:orientation =   "horizontal"
        android:clickable="true">
        <TextView
            android:id =   "@+id/tv_key3"
            android:layout_width =   "60dip"
            android:layout_height =   "30dip"
            android:gravity =   "left"
            android:textColor = "#011333"
            android:text="手机"
            android:textSize =   "14sp"  />
        <TextView
            android:id =   "@+id/tv_telphone"
            android:layout_width =   "fill_parent"
            android:layout_height =   "30dip"
            android:gravity =   "right"
            android:textColor =   "#011333"
            android:textSize =   "14sp"   />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity =   "center_vertical"
        android:orientation =   "horizontal"
        android:clickable="true">
        <TextView
            android:id =   "@+id/tv_key4"
            android:layout_width =   "60dip"
            android:layout_height =   "30dip"
            android:gravity =   "left"
            android:textColor = "#011333"
            android:text="e-mail"
            android:textSize =   "14sp"  />
        <TextView
            android:id =   "@+id/tv_email"
            android:layout_width =   "fill_parent"
            android:layout_height =   "30dip"
            android:gravity =   "right"
            android:textColor =   "#011333"
            android:textSize =   "14sp"   />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090"/>

</LinearLayout>